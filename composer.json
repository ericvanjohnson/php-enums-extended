{
    "name": "josezenem/php-enums-extended",
    "description": "Extended PHP 8.1 Enums",
    "keywords": [
        "josezenem",
        "php-enums-extended"
    ],
    "homepage": "https://github.com/josezenem/php-enums-extended",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Jimenez",
            "email": "jose@jimenez.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Josezenem\\PhpEnumsExtended\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Josezenem\\PhpEnumsExtended\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
